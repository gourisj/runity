<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gjha.runity" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <!--
 The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but are recommended.
    -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity
            android:name=".MainActivity2Activity"
            android:label="@string/title_activity_main_activity2"
            android:theme="@android:style/Theme.Holo.Light" />
        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps"
            android:theme="@android:style/Theme.Holo.Light" />

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".ItemNGOListActivity"
            android:label="@string/title_itemngo_list"
            android:theme="@android:style/Theme.Holo.Light" >
        </activity>
        <activity
            android:name=".ItemNGODetailActivity"
            android:label="@string/title_itemngo_detail"
            android:parentActivityName=".ItemNGOListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gjha.runity.ItemNGOListActivity" />
        </activity>

        <provider
            android:name=".database.NGOContentProvider"
            android:authorities="com.example.gjha.runity.provider"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <activity
            android:name=".splashscreen"
            android:label="@string/title_activity_splashscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".listSelection"
            android:label="@string/title_activity_list_selection" >
        </activity>
        <activity
            android:name=".CompanyListActivity"
            android:label="@string/title_company_list"
            android:theme="@android:style/Theme.Holo.Light"
            >
        </activity>
        <activity
            android:name=".CompanyDetailActivity"
            android:label="@string/title_company_detail"
            android:parentActivityName=".CompanyListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.gjha.runity.CompanyListActivity" />
        </activity>

        <provider
            android:name=".database.CompanyContentProvider"
            android:authorities="com.example.gjha.runity.provider.company"
            android:enabled="true"
            android:exported="true" >
        </provider>

        <service
            android:name=".GPSTracker"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity
            android:name=".TabbedmapsActivity"
            android:label="@string/title_activity_tabbedmaps" >
        </activity>
    </application>

</manifest>
