<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/companyDetailScrollView"
android:layout_width="fill_parent"
android:layout_height="fill_parent" >

<LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="Companyname"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textCompanyName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="Company name"
        android:inputType="textPersonName"
        android:textColor="#ff222222"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:fontFamily="sans-serif-light"
        android:text="About The Company"
        android:textColor="#ff707070"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/textBioc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type detail about Company"
        android:inputType="textMultiLine|textAutoCorrect"
        android:textColor="#ff222222"
        android:textSize="20sp" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/company_map_button"
        android:text="Start Run"
        android:onClick="mapinitiate"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal" />
</LinearLayout>

</ScrollView>