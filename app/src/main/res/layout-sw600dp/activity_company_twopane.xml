<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="16dp" android:baselineAligned="false"
    android:divider="?android:attr/dividerHorizontal" android:orientation="horizontal"
    android:showDividers="middle" tools:context="com.example.gjha.runity.CompanyListActivity">

    <!--
    This layout is a two-pane layout for the ItemsNGO
    master/detail flow.

    -->

<fragment
    android:id="@+id/company_list"
    android:name="com.example.gjha.runity.CompanyListFragment"
    android:layout_width="0dp"
    android:layout_height="match_parent"
    android:layout_weight="1"
    tools:layout="@android:layout/list_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" />

<FrameLayout android:id="@+id/company_detail_container" android:layout_width="0dp"
android:layout_height="match_parent" android:layout_weight="3" />

</LinearLayout>

